@model IEnumerable<Recipe>

@{ 
    ViewBag.Title = "Admin - Recipes";
    Layout = "_AdminLayout";
}
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-center">ID</th>
        <th class="text-center">Recipe Name</thclass="">
        <th class="text-center">Actions</thclass="">
    </tr>
    @foreach(var r in Model)
    {
        <tr>
            <td class="text-center">@r.RecipeId</td>
            <td class="text-center">@r.RecipeName</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="RecipeId" value="@r.RecipeId" />
                    <a asp-action="Edit" asp-route-recipeid="@r.RecipeId" class="btn btn-sm btn-warning">Edit</a>
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center "><a asp-action="Create" class="btn btn-primary">Add Recipe</a></div>